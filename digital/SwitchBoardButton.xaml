<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="digital.SwitchboardButton" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout Orientation="Vertical" Padding="10,10,10,20">

        <Image x:Name="SwitchboardIcon" VerticalOptions="Center" Source="{Binding Icon}" />

        <Label x:Name="SwitchboardLabel" 
			   HorizontalTextAlignment="Center"
               Text="{Binding Label}"
               TextColor="#474747"
			   FontSize="12"
			   FontFamily="Roboto"
			   XAlign="Center"/>
    </StackLayout>

</ContentView>